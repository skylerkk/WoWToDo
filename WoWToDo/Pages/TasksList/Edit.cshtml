@page
@model WoWToDo.Pages.TasksList.EditModel

<br />
<h2 class="text-info">Edit Task</h2>
<br />

<div class="border container" style="padding:30px;">
	<form method="post">
		<input type="hidden" asp-for="Tasks.Id" />
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="Tasks.Name"></label>
			</div>
			<div class="col-6">
				<input asp-for="Tasks.Name" class="form-control" />
			</div>
			<span asp-validation-for="Tasks.Name" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="Tasks.Location"></label>
			</div>
			<div class="col-6">
				<input asp-for="Tasks.Location" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="Tasks.Time"></label>
			</div>
			<div class="col-6">
				<input asp-for="Tasks.Time" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-3 offset-3">
				<input type="submit" value="Update" class="btn btn-primary form-control" />
			</div>
			<div class="col-3">
				<a asp-page="Index" class="btn btn-success form-control">Back to List</a>
			</div>
		</div>
	</form>
</div>

