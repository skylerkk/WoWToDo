@page
@model WoWToDo.Pages.TasksList.IndexModel

<br />
<div class="container row p-0 m-0">
	<div class="col-9">
		<h2 class="text-info">Tasks List</h2>
	</div>
	<div class="col-3">
		<a asp-page="Create" class="btn btn-info form-control text-white">Create New Task</a>
	</div>

	<div class="col-12 border p-3 mt-3">
		<form method="post">
			@if (Model.Tasks.Count() > 0)
			{
				<table class="table table-striped border">
					<tr class="table-secondary">
						<th>
							<label asp-for="Tasks.FirstOrDefault().Name"></label>
						</th>
						<th>
							@*@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author);*@
							<label asp-for="Tasks.FirstOrDefault().Location"></label>
						</th>
						<th>
							@*@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author);*@
							<label asp-for="Tasks.FirstOrDefault().Time"></label>
						</th>
						<th>

						</th>
					</tr>
					@foreach (var item in Model.Tasks)
					{
						<tr>
							<td>
								@Html.DisplayFor(m => item.Name)
							</td>
							<td>
								@Html.DisplayFor(m => item.Location)
							</td>
							<td>
								@Html.DisplayFor(m => item.Time)
							</td>
							<td>
								<button class="btn btn-danger btn-sm">Delete</button>
								<a class="btn btn-success btn-sm text-white">Edit</a>
							</td>
						</tr>
					}
				</table>
			}
			else
			{
				<p>No Tasks Available.</p>
			}
		</form>
	</div>
</div>


